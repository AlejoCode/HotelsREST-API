<div class="row text-center">
  <div class="col-12 mt-3">
    <h3>
    Hotel CRD
    </h3>
  </div>
<div class="col-md-4 mt-3">   
<form method="post" id="addHotelForm" action="/hotels/add">
  <div class="form-group row">
    <label for="inputName" class="col-sm-3 col-form-label">Name</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" id="inputName" name="name" placeholder="Enter Name">
    </div>
  </div>
  <div class="form-group row">
    <label for="inputCity" class="col-sm-3 col-form-label">City</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" id="inputCity" name="city" placeholder="Enter City">
    </div>
  </div>
   <div class="form-group row">
    <label for="inputAddress" class="col-sm-3 col-form-label">Address</label>
    <div class="col-sm-9">
      <input type="text" class="form-control" id="inputAddress" name="address" placeholder="Enter Address">
    </div>
  </div>
     <div class="form-group row">
    <label for="inputStars" class="col-sm-3 col-form-label">Stars</label>
    <div class="col-sm-9">
      <input type="number" class="form-control" id="inputStars" name="stars" placeholder="# of Stars">
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-9 mt-3">
      <button type="button" id="btnSubmitHotel" class="btn btn-primary">Add Hotel</button>
    </div>
  </div>
</form>
</div> 

<div class="col-md-8 mt-3">
  <table class="table" id="myTableHotel">
  <thead class="thead-dark">
    <tr>
      {{!-- <th scope="col">ID</th> --}}
      <th scope="col">Name</th>
      <th scope="col">City</th>
      <th scope="col">Address</th>
      <th scope="col">Stars</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>    
  </tbody>
</table>
</div>
</div>